{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "template-curly-spacing" : "off",
    "react/prop-types": 0,
    "brace-style": [
      "error",
      "1tbs", { "allowSingleLine": true }
    ],
    "camelcase": 2,
    "quotes": [
      "error",
      "double"
    ],
    "no-undef": 0,
    "one-var": 0,
    "semi": [
      "error",
      "always"
    ]
  }
}
